{
	"name": "backend",
	"scripts": {
		"dev": "bun run --hot src/index.ts",
		"build": "bun build src/index.ts --target=bun --sourcemap=inline --outdir=dist --minify",
		"start": "bun run dist/index.js",
		"generate": "bun run --bun drizzle-kit generate",
		"migrate": "bun run --bun drizzle-kit migrate",
		"test": "bun --env-file=.env.test test",
		"typecheck": "tsc --noEmit",
		"biome": "biome check",
		"biome-fix": "biome check --write"
	},
	"dependencies": {
		"@google-cloud/cloud-sql-connector": "^1.8.4",
		"@hono/zod-validator": "^0.7.5",
		"bcryptjs": "^3.0.3",
		"drizzle-orm": "^0.44.7",
		"hono": "^4.10.7",
		"iovalkey": "^0.3.3",
		"pg": "^8.16.3",
		"pino": "^10.1.0",
		"pino-pretty": "^13.1.2",
		"postgres": "^3.4.7",
		"resend": "^6.5.2",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/bun": "^1.3.3",
		"@types/pg": "^8.15.6",
		"drizzle-kit": "^0.31.7",
		"typescript": "^5.9.3"
	}
}
