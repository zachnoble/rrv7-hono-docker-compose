{
	"name": "backend",
	"scripts": {
		"dev": "bun run --hot src/index.ts",
		"build": "bun build src/index.ts --target=bun --sourcemap=inline --outdir=dist --minify",
		"start": "bun run dist/index.js",
		"generate": "bun run --bun drizzle-kit generate",
		"migrate": "bun run --bun drizzle-kit migrate",
		"test": "bun --env-file=.env.test test",
		"test:ci": "bun test",
		"typecheck": "tsc --noEmit",
		"biome": "biome check"
	},
	"dependencies": {
		"@hono/zod-validator": "^0.4.3",
		"bcryptjs": "^3.0.2",
		"drizzle-orm": "^0.40.1",
		"hono": "^4.7.8",
		"iovalkey": "^0.3.3",
		"pg": "^8.15.6",
		"pino": "^9.6.0",
		"pino-pretty": "^13.0.0",
		"postgres": "^3.4.7",
		"redis": "^5.8.2",
		"resend": "^4.5.1",
		"zod": "^3.24.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/bun": "^1.2.11",
		"@types/pg": "^8.11.14",
		"drizzle-kit": "^0.30.6",
		"typescript": "^5.8.3"
	}
}
